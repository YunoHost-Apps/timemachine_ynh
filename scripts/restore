#!/bin/bash

source ../settings/scripts/_common.sh
source /usr/share/yunohost/helpers

password=$(ynh_app_setting_get --key=password)

#=================================================
# RESTORE THE DATA DIRECTORY
#=================================================
ynh_script_progression "Restoring the data directory..."

ynh_restore "$data_dir"

#=================================================
# OPEN PORT 445
#=================================================
ynh_script_progression "Configuring firewall..."

ynh_hide_warnings yunohost firewall allow --no-upnp TCP 445 # Allow SMB access

#=================================================
# RESTORE VARIOUS FILES
#=================================================
ynh_script_progression "Restoring various files..."

# Create the samba user
(echo "$password"; echo "$password") | ynh_hide_warnings smbpasswd -s -a "$app"

samba_sysadmin_setup

ynh_restore "/etc/smb/smb.d/$app.conf"

ynh_restore "/etc/avahi/services/$app.service"

samba_sysadmin_update
samba_sysadmin_add

#=================================================
# INTEGRATE SERVICE IN YUNOHOST
#=================================================
ynh_script_progression "Integrating service in YunoHost..."

yunohost service add smbd --needs_exposed_ports 445

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service=smbd --action="reload"
ynh_systemctl --service=avahi-daemon --action="restart"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Restoration completed for $app"
